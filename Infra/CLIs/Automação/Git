@echo off
setlocal

REM Inicializa variáveis
set CHECK_STATUS=false
set COMMIT_MESSAGE=""

REM Processa os parâmetros
:process_params
if "%1"=="" goto end_params
if "%1"=="-s" (
    set CHECK_STATUS=true
) else (
    if "%COMMIT_MESSAGE%"=="" (
        set COMMIT_MESSAGE=%1
    ) else (
        set COMMIT_MESSAGE=%COMMIT_MESSAGE% %1
    )
)
shift
goto process_params
:end_params

REM Navega para o diretório do repositório
cd /d C:\Users\thyth\Documents\Programing\Studies\IPV4

REM Verifica o status do repositório se -s foi passado
if "%CHECK_STATUS%"=="true" (
    echo Verificando o status do repositório...
    git status
)

REM Adiciona os arquivos ao índice
echo Adicionando arquivos ao índice...
git add .

REM Faz o commit das mudanças
echo Fazendo commit das mudanças...
git commit -m "%COMMIT_MESSAGE%"

REM Envia as mudanças para o repositório remoto
echo Enviando mudanças para o repositório remoto...
git push

endlocal
pause
